-- Загрузка библиотеки FurstyHub
local FurstyHub = loadstring(game:HttpGet("https://raw.githubusercontent.com/muradholmatov307-dev/source/refs/heads/main/source"))()

if not FurstyHub then
    warn("❌ Не удалось загрузить библиотеку FurstyHub!")
    return
end

-- Создание GUI
local MyGUI = FurstyHub:CreateGUI({
    Name = "FurstyUi",
    Version = "1.0", 
    Discord = "dsc.gg/yourdiscord",
    WatermarkEnabled = true
})

if not MyGUI then
    warn("❌ Не удалось создать GUI!")
    return
end

print("✅ Ваш хаб успешно загружен!")

-- Создаем вкладки
local MainTab = MyGUI:CreateTab("Основное")
local VisualsTab = MyGUI:CreateTab("Визуалы")
local SettingsTab = MyGUI:CreateTab("Настройки")

--[[
    ДОБАВЛЯЙТЕ СВОИ ФУНКЦИИ ЗДЕСЬ
--]]

-- Вкладка Основное
MainTab:AddButton("Пример кнопки", function()
    print("Кнопка нажата!")
    -- Ваш код здесь
end)

MainTab:AddToggle("Пример тоггла", false, function(state)
    print("Тоггл:", state)
    -- Ваш код здесь
end)

MainTab:AddSlider("Пример слайдера", 1, 100, 50, function(value)
    print("Слайдер:", value)
    -- Ваш код здесь
end)

MainTab:AddDropdown("Пример списка", {"Опция 1", "Опция 2", "Опция 3"}, "Опция 1", function(option)
    print("Выбрано:", option)
    -- Ваш код здесь
end)

-- Вкладка Визуалы
VisualsTab:AddToggle("ESP", false, function(state)
    print("ESP:", state)
    -- Добавьте ваш ESP код здесь
end)

VisualsTab:AddToggle("Сквозь стены", false, function(state)
    print("Сквозь стены:", state)
    -- Ваш код здесь
end)

VisualsTab:AddDropdown("Тип ESP", {"Бокс", "Скелет", "Имя"}, "Бокс", function(option)
    print("Тип ESP:", option)
    -- Ваш код здесь
end)

-- Вкладка Настройки
SettingsTab:AddToggle("Водяной знак", true, function(state)
    MyGUI:SetWatermarkEnabled(state)
    print("Водяной знак:", state)
end)

SettingsTab:AddButton("Скопировать Discord", function()
    setclipboard("dsc.gg/yourdiscord")
    print("Discord скопирован!")
end)

SettingsTab:AddButton("Уничтожить GUI", function()
    MyGUI:Destroy()
    print("GUI уничтожен!")
end)
-- Горячие клавиши
local UserInputService = game:GetService("UserInputService")
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == Enum.KeyCode.RightShift then
        -- Переключение вкладок
        local tabNames = {"Основное", "Визуалы", "Настройки"}
        local currentTab = "Основное"
        
        for i, name in ipairs(tabNames) do
            if name == currentTab then
                local nextTab = tabNames[(i % #tabNames) + 1]
                MyGUI:ShowTab(nextTab)
                print("Переключено на вкладку:", nextTab)
                break
            end
        end
    elseif input.KeyCode == Enum.KeyCode.Insert then
        -- Скрыть/показать GUI
        local mainFrame = MyGUI:GetTab("Основное").Button.Parent.Parent.Parent
        mainFrame.Visible = not mainFrame.Visible
        print("GUI скрыт/показан!")
    end
end)
