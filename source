-- FurstyHub Core Library
local FurstyHub = {}

-- Защита от копирования
if getgenv().FurstyHubLoaded then
    return nil
end
getgenv().FurstyHubLoaded = true

-- Проверяем что игра загружена
if not game:IsLoaded() then
    game.Loaded:Wait()
end

function FurstyHub:CreateGUI(config)
    -- Проверяем config
    if not config then
        config = {}
    end
    
    -- Конфигурация по умолчанию
    config.Name = config.Name or "FurstyHub"
    config.Version = config.Version or "1.0"
    config.Discord = config.Discord or "dsc.gg/furstyhub"
    config.WatermarkEnabled = config.WatermarkEnabled == nil and true or config.WatermarkEnabled

    -- Основной GUI объект
    local GUI = {}
    
    -- Watermark система
    local WatermarkEnabled = config.WatermarkEnabled
    local WatermarkGui = nil
    
    local function UpdateWatermark()
        if not WatermarkEnabled then return end
        
        -- Удаляем старый watermark
        if game:GetService("CoreGui"):FindFirstChild(config.Name .. "Watermark") then
            game:GetService("CoreGui")[config.Name .. "Watermark"]:Destroy()
        end
        
        WatermarkGui = Instance.new("ScreenGui")
        local WatermarkFrame = Instance.new("Frame")
        local UICorner = Instance.new("UICorner")
        local Stroke = Instance.new("UIStroke")
        local FIcon = Instance.new("TextLabel")
        local TextLabel = Instance.new("TextLabel")
        local PingLabel = Instance.new("TextLabel")
        
        WatermarkGui.Name = config.Name .. "Watermark"
        WatermarkGui.Parent = game.CoreGui
        WatermarkGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
        
        WatermarkFrame.Name = "WatermarkFrame"
        WatermarkFrame.Parent = WatermarkGui
        WatermarkFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
        WatermarkFrame.Position = UDim2.new(0.75, 0, 0.02, 0)
        WatermarkFrame.Size = UDim2.new(0, 200, 0, 40)
        
        UICorner.CornerRadius = UDim.new(0, 8)
        UICorner.Parent = WatermarkFrame
        
        -- Анимированная обводка
        Stroke.Parent = WatermarkFrame
        Stroke.Color = Color3.fromRGB(255, 50, 50)
        Stroke.Thickness = 2
        Stroke.Transparency = 0.3
        Stroke.LineJoinMode = Enum.LineJoinMode.Round
        
        -- Иконка F
        FIcon.Name = "FIcon"
        FIcon.Parent = WatermarkFrame
        FIcon.BackgroundTransparency = 1
        FIcon.Position = UDim2.new(0.02, 0, 0.1, 0)
        FIcon.Size = UDim2.new(0, 25, 0, 25)
        FIcon.Font = Enum.Font.GothamBlack
        FIcon.Text = "F"
        FIcon.TextColor3 = Color3.fromRGB(255, 50, 50)
        FIcon.TextSize = 18
        FIcon.TextStrokeTransparency = 0.8
        
        -- Текст водяного знака
        TextLabel.Parent = WatermarkFrame
        TextLabel.BackgroundTransparency = 1
        TextLabel.Position = UDim2.new(0.15, 0, 0.1, 0)
        TextLabel.Size = UDim2.new(0, 120, 0, 15)
        TextLabel.Font = Enum.Font.GothamBold
        TextLabel.Text = config.Name .. " | " .. config.Version
        TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        TextLabel.TextSize = 12
        TextLabel.TextXAlignment = Enum.TextXAlignment.Left
        
        -- Пинг
        PingLabel.Parent = WatermarkFrame
        PingLabel.BackgroundTransparency = 1
        PingLabel.Position = UDim2.new(0.15, 0, 0.55, 0)
        PingLabel.Size = UDim2.new(0, 120, 0, 12)
        PingLabel.Font = Enum.Font.Gotham
        PingLabel.Text = "Ping: " .. math.random(20, 60) .. "ms"
        PingLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
        PingLabel.TextSize = 10
        PingLabel.TextXAlignment = Enum.TextXAlignment.Left
        
        -- Анимация обводки
        spawn(function()
            while WatermarkEnabled and WatermarkGui and WatermarkGui.Parent do
                -- Пульсирующая анимация
                for i = 1, 10 do
                    if not WatermarkGui or not WatermarkGui.Parent then break end
                    local alpha = 0.3 + (i * 0.07)
                    Stroke.Transparency = 1 - alpha
                    wait(0.05)
                end
                for i = 1, 10 do
                    if not WatermarkGui or not WatermarkGui.Parent then break end
                    local alpha = 1.0 - (i * 0.07)
                    Stroke.Transparency = 1 - alpha
                    wait(0.05)
                end
                
                -- Смена цвета обводки
                local colors = {
                    Color3.fromRGB(255, 50, 50),   -- Красный
                    Color3.fromRGB(255, 100, 50),  -- Оранжевый
                    Color3.fromRGB(255, 200, 50),  -- Желтый
                    Color3.fromRGB(50, 255, 100),  -- Зеленый
                    Color3.fromRGB(50, 150, 255),  -- Синий
                    Color3.fromRGB(150, 50, 255)   -- Фиолетовый
                }
                
                for _, color in ipairs(colors) do
                    if not WatermarkGui or not WatermarkGui.Parent then break end
                    game:GetService("TweenService"):Create(Stroke, TweenInfo.new(1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Color = color}):Play()
                    wait(2)
                end
            end
        end)
        
        -- Обновление пинга
        spawn(function()
            while WatermarkEnabled and WatermarkGui and WatermarkGui.Parent do
                wait(3)
                if PingLabel then
                    PingLabel.Text = "Ping: " .. math.random(20, 60) .. "ms"
                end
            end
        end)
        
        -- Анимация появления
        WatermarkFrame.Position = UDim2.new(0.8, 0, -0.1, 0)
        game:GetService("TweenService"):Create(WatermarkFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Position = UDim2.new(0.75, 0, 0.02, 0)}):Play()
    end
    
    -- Остальной код GUI остается таким же как в предыдущей версии
    -- Создаем основной GUI
    local ScreenGui = Instance.new("ScreenGui")
    local MainFrame = Instance.new("Frame")
    local MainGradient = Instance.new("UIGradient")
    local UICorner = Instance.new("UICorner")
    local DropShadow = Instance.new("ImageLabel")
    local TopBar = Instance.new("Frame")
    local Title = Instance.new("TextLabel")
    local CloseButton = Instance.new("TextButton")

    ScreenGui.Name = config.Name .. "GUI"
    ScreenGui.Parent = game.CoreGui
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.ResetOnSpawn = false

    -- Главный фрейм с градиентом
    MainFrame.Name = "MainFrame"
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
    MainFrame.Position = UDim2.new(0.3, 0, 0.25, 0)
    MainFrame.Size = UDim2.new(0, 550, 0, 450)
    MainFrame.Active = true
    MainFrame.Draggable = true

    -- Градиент для фона
    MainGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.00, Color3.fromRGB(15, 15, 20)),
        ColorSequenceKeypoint.new(1.00, Color3.fromRGB(25, 25, 35))
    })
    MainGradient.Rotation = 45
    MainGradient.Parent = MainFrame

    UICorner.CornerRadius = UDim.new(0, 15)
    UICorner.Parent = MainFrame

    -- Тень для глубины
    DropShadow.Name = "DropShadow"
    DropShadow.Parent = MainFrame
    DropShadow.BackgroundTransparency = 1.0
    DropShadow.BorderSizePixel = 0
    DropShadow.Size = UDim2.new(1, 0, 1, 0)
    DropShadow.ZIndex = 0
    DropShadow.Image = "rbxassetid://6015897843"
    DropShadow.ImageColor3 = Color3.fromRGB(0, 0, 0)
    DropShadow.ImageTransparency = 0.5
    DropShadow.ScaleType = Enum.ScaleType.Slice
    DropShadow.SliceCenter = Rect.new(49, 49, 450, 450)

    -- Верхняя панель с градиентом
    TopBar.Name = "TopBar"
    TopBar.Parent = MainFrame
    TopBar.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
    TopBar.BorderSizePixel = 0
    TopBar.Size = UDim2.new(1, 0, 0, 45)

    local TopBarGradient = Instance.new("UIGradient")
    TopBarGradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.00, Color3.fromRGB(255, 50, 50)),
        ColorSequenceKeypoint.new(1.00, Color3.fromRGB(255, 100, 100))
    })
    TopBarGradient.Transparency = NumberSequence.new(0.9)
    TopBarGradient.Parent = TopBar

    local TopBarCorner = Instance.new("UICorner")
    TopBarCorner.CornerRadius = UDim.new(0, 15)
    TopBarCorner.Parent = TopBar

    -- Заголовок
    Title.Name = "Title"
    Title.Parent = TopBar
    Title.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    Title.BackgroundTransparency = 1.0
    Title.Position = UDim2.new(0, 20, 0, 0)
    Title.Size = UDim2.new(0, 250, 1, 0)
    Title.Font = Enum.Font.GothamBold
    Title.Text = "      " .. config.Name .. "  |  " .. config.Version
    Title.TextColor3 = Color3.fromRGB(255, 255, 255)
    Title.TextSize = 18
    Title.TextXAlignment = Enum.TextXAlignment.Left
    Title.TextStrokeTransparency = 0.8

    -- Иконка F
    local FIcon = Instance.new("TextLabel")
    FIcon.Name = "FIcon"
    FIcon.Parent = Title
    FIcon.BackgroundTransparency = 1
    FIcon.Position = UDim2.new(0, -30, 0, 0)
    FIcon.Size = UDim2.new(0, 25, 1, 0)
    FIcon.Font = Enum.Font.GothamBlack
    FIcon.Text = "F"
    FIcon.TextColor3 = Color3.fromRGB(255, 50, 50)
    FIcon.TextSize = 22
    FIcon.TextXAlignment = Enum.TextXAlignment.Center
    FIcon.TextStrokeTransparency = 0.7

    -- Кнопка закрытия
    CloseButton.Name = "CloseButton"
    CloseButton.Parent = TopBar
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
    CloseButton.Position = UDim2.new(1, -40, 0.5, -12)
    CloseButton.Size = UDim2.new(0, 24, 0, 24)
    CloseButton.Font = Enum.Font.GothamBold
    CloseButton.Text = "×"
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.TextSize = 16
    CloseButton.TextStrokeTransparency = 0.8

    local CloseCorner = Instance.new("UICorner")
    CloseCorner.CornerRadius = UDim.new(1, 0)
    CloseCorner.Parent = CloseButton

    -- Анимация кнопки закрытия
    CloseButton.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(CloseButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(255, 80, 80)}):Play()
    end)
    
    CloseButton.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(CloseButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(255, 50, 50)}):Play()
    end)

    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
        getgenv().FurstyHubLoaded = false
    end)

    -- Контейнер вкладок
    local TabsContainer = Instance.new("Frame")
    local TabButtons = Instance.new("Frame")
    local ContentContainer = Instance.new("Frame")

    TabsContainer.Name = "TabsContainer"
    TabsContainer.Parent = MainFrame
    TabsContainer.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    TabsContainer.BackgroundTransparency = 1.0
    TabsContainer.Position = UDim2.new(0, 0, 0, 45)
    TabsContainer.Size = UDim2.new(1, 0, 1, -45)

    -- Кнопки вкладок
    TabButtons.Name = "TabButtons"
    TabButtons.Parent = TabsContainer
    TabButtons.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
    TabButtons.Size = UDim2.new(0, 140, 1, 0)

    local TabButtonsCorner = Instance.new("UICorner")
    TabButtonsCorner.CornerRadius = UDim.new(0, 15)
    TabButtonsCorner.Parent = TabButtons

    local TabButtonsLayout = Instance.new("UIListLayout")
    TabButtonsLayout.Parent = TabButtons
    TabButtonsLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    TabButtonsLayout.SortOrder = Enum.SortOrder.LayoutOrder
    TabButtonsLayout.Padding = UDim.new(0, 8)

    -- Контейнер контента
    ContentContainer.Name = "ContentContainer"
    ContentContainer.Parent = TabsContainer
    ContentContainer.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ContentContainer.BackgroundTransparency = 1.0
    ContentContainer.Position = UDim2.new(0, 145, 0, 15)
    ContentContainer.Size = UDim2.new(0, 390, 0, 380)

    -- Табы системы
    local Tabs = {}
    local CurrentTab = nil

    -- Функция создания кнопки
    function GUI:CreateButton(parent, text, callback)
        local Button = Instance.new("TextButton")
        local UICorner = Instance.new("UICorner")
        local ButtonStroke = Instance.new("UIStroke")
        
        Button.Parent = parent
        Button.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
        Button.Size = UDim2.new(0.95, 0, 0, 45)
        Button.Font = Enum.Font.GothamSemibold
        Button.Text = text
        Button.TextColor3 = Color3.fromRGB(255, 255, 255)
        Button.TextSize = 14
        Button.AutoButtonColor = false
        
        -- Обводка кнопки
        ButtonStroke.Parent = Button
        ButtonStroke.Color = Color3.fromRGB(255, 50, 50)
        ButtonStroke.Thickness = 1
        ButtonStroke.Transparency = 0.7
        
        UICorner.CornerRadius = UDim.new(0, 10)
        UICorner.Parent = Button
        
        -- Анимации кнопки
        Button.MouseEnter:Connect(function()
            game:GetService("TweenService"):Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(255, 60, 60)}):Play()
            game:GetService("TweenService"):Create(ButtonStroke, TweenInfo.new(0.2), {Transparency = 0.3}):Play()
        end)
        
        Button.MouseLeave:Connect(function()
            game:GetService("TweenService"):Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 50)}):Play()
            game:GetService("TweenService"):Create(ButtonStroke, TweenInfo.new(0.2), {Transparency = 0.7}):Play()
        end)
        
        Button.MouseButton1Click:Connect(function()
            if callback then
                -- Анимация нажатия
                game:GetService("TweenService"):Create(Button, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(255, 80, 80)}):Play()
                game:GetService("TweenService"):Create(ButtonStroke, TweenInfo.new(0.1), {Thickness = 2}):Play()
                wait(0.1)
                game:GetService("TweenService"):Create(Button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 50)}):Play()
                game:GetService("TweenService"):Create(ButtonStroke, TweenInfo.new(0.2), {Thickness = 1}):Play()
                callback()
            end
        end)
        
        return Button
    end

    -- Функция создания тоггла
    function GUI:CreateToggle(parent, text, default, callback)
        local ToggleFrame = Instance.new("Frame")
        local ToggleButton = Instance.new("TextButton")
        local ToggleLabel = Instance.new("TextLabel")
        local ToggleCircle = Instance.new("Frame")
        local ToggleStroke = Instance.new("UIStroke")
        
        ToggleFrame.Parent = parent
        ToggleFrame.BackgroundTransparency = 1
        ToggleFrame.Size = UDim2.new(0.95, 0, 0, 35)
        
        ToggleLabel.Parent = ToggleFrame
        ToggleLabel.BackgroundTransparency = 1
        ToggleLabel.Size = UDim2.new(0.7, 0, 1, 0)
        ToggleLabel.Font = Enum.Font.Gotham
        ToggleLabel.Text = text
        ToggleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        ToggleLabel.TextSize = 14
        ToggleLabel.TextXAlignment = Enum.TextXAlignment.Left
        
        ToggleButton.Parent = ToggleFrame
        ToggleButton.BackgroundColor3 = Color3.fromRGB(60, 60, 70)
        ToggleButton.Position = UDim2.new(0.8, 0, 0.2, 0)
        ToggleButton.Size = UDim2.new(0, 45, 0, 22)
        ToggleButton.AutoButtonColor = false
        ToggleButton.Text = ""
        
        -- Обводка тоггла
        ToggleStroke.Parent = ToggleButton
        ToggleStroke.Color = Color3.fromRGB(255, 50, 50)
        ToggleStroke.Thickness = 1
        ToggleStroke.Transparency = 0.7
        
        local ToggleCorner = Instance.new("UICorner")
        ToggleCorner.CornerRadius = UDim.new(1, 0)
        ToggleCorner.Parent = ToggleButton
        
        ToggleCircle.Parent = ToggleButton
        ToggleCircle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        ToggleCircle.Position = UDim2.new(0.05, 0, 0.1, 0)
        ToggleCircle.Size = UDim2.new(0, 18, 0, 18)
        
        local CircleCorner = Instance.new("UICorner")
        CircleCorner.CornerRadius = UDim.new(1, 0)
        CircleCorner.Parent = ToggleCircle
        
        local state = default or false
        
        local function updateToggle()
            if state then
                game:GetService("TweenService"):Create(ToggleButton, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(255, 50, 50)}):Play()
                game:GetService("TweenService"):Create(ToggleCircle, TweenInfo.new(0.3), {Position = UDim2.new(0.55, 0, 0.1, 0)}):Play()
                game:GetService("TweenService"):Create(ToggleStroke, TweenInfo.new(0.3), {Transparency = 0.3}):Play()
            else
                game:GetService("TweenService"):Create(ToggleButton, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(60, 60, 70)}):Play()
                game:GetService("TweenService"):Create(ToggleCircle, TweenInfo.new(0.3), {Position = UDim2.new(0.05, 0, 0.1, 0)}):Play()
                game:GetService("TweenService"):Create(ToggleStroke, TweenInfo.new(0.3), {Transparency = 0.7}):Play()
            end
            if callback then
                callback(state)
            end
        end
        
        ToggleButton.MouseButton1Click:Connect(function()
            state = not state
            updateToggle()
        end)
        
        updateToggle()
        return ToggleFrame
    end

    -- Функция создания слайдера
    function GUI:CreateSlider(parent, text, min, max, default, callback)
        local SliderFrame = Instance.new("Frame")
        local SliderLabel = Instance.new("TextLabel")
        local SliderBar = Instance.new("Frame")
        local SliderFill = Instance.new("Frame")
        local SliderButton = Instance.new("TextButton")
        local ValueLabel = Instance.new("TextLabel")
        local BarStroke = Instance.new("UIStroke")
        
        SliderFrame.Parent = parent
        SliderFrame.BackgroundTransparency = 1
        SliderFrame.Size = UDim2.new(0.95, 0, 0, 55)
        
        SliderLabel.Parent = SliderFrame
        SliderLabel.BackgroundTransparency = 1
        SliderLabel.Size = UDim2.new(0.7, 0, 0, 20)
        SliderLabel.Font = Enum.Font.Gotham
        SliderLabel.Text = text
        SliderLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        SliderLabel.TextSize = 14
        SliderLabel.TextXAlignment = Enum.TextXAlignment.Left
        
        ValueLabel.Parent = SliderFrame
        ValueLabel.BackgroundTransparency = 1
        ValueLabel.Position = UDim2.new(0.7, 0, 0, 0)
        ValueLabel.Size = UDim2.new(0.3, 0, 0, 20)
        ValueLabel.Font = Enum.Font.GothamBold
        ValueLabel.Text = tostring(default or min)
        ValueLabel.TextColor3 = Color3.fromRGB(255, 50, 50)
        ValueLabel.TextSize = 14
        ValueLabel.TextXAlignment = Enum.TextXAlignment.Right
        
        SliderBar.Parent = SliderFrame
        SliderBar.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
        SliderBar.Position = UDim2.new(0, 0, 0.6, 0)
        SliderBar.Size = UDim2.new(1, 0, 0, 8)
        
        -- Обводка слайдера
        BarStroke.Parent = SliderBar
        BarStroke.Color = Color3.fromRGB(255, 50, 50)
        BarStroke.Thickness = 1
        BarStroke.Transparency = 0.5
        
        local BarCorner = Instance.new("UICorner")
        BarCorner.CornerRadius = UDim.new(1, 0)
        BarCorner.Parent = SliderBar
        
        SliderFill.Parent = SliderBar
        SliderFill.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
        SliderFill.Size = UDim2.new((default or min) / max, 0, 1, 0)
        
        local FillCorner = Instance.new("UICorner")
        FillCorner.CornerRadius = UDim.new(1, 0)
        FillCorner.Parent = SliderFill
        
        SliderButton.Parent = SliderBar
        SliderButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        SliderButton.Position = UDim2.new((default or min) / max, -10, -0.75, 0)
        SliderButton.Size = UDim2.new(0, 20, 0, 20)
        SliderButton.Text = ""
        SliderButton.ZIndex = 2
        
        local ButtonCorner = Instance.new("UICorner")
        ButtonCorner.CornerRadius = UDim.new(1, 0)
        ButtonCorner.Parent = SliderButton
        
        local dragging = false
        
        local function updateSlider(value)
            local percent = math.clamp(value, min, max) / max
            SliderFill.Size = UDim2.new(percent, 0, 1, 0)
            SliderButton.Position = UDim2.new(percent, -10, -0.75, 0)
            ValueLabel.Text = tostring(math.floor(value))
            if callback then
                callback(value)
            end
        end
        
        SliderButton.MouseButton1Down:Connect(function()
            dragging = true
        end)
        
        game:GetService("UserInputService").InputEnded:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 then
                dragging = false
            end
        end)
        
        game:GetService("UserInputService").InputChanged:Connect(function(input)
            if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
                local percent = math.clamp((input.Position.X - SliderBar.AbsolutePosition.X) / SliderBar.AbsoluteSize.X, 0, 1)
                local value = math.floor(min + (max - min) * percent)
                updateSlider(value)
            end
        end)
        
        updateSlider(default or min)
        return SliderFrame
    end

    -- Функция создания выпадающего списка
    function GUI:CreateDropdown(parent, text, options, default, callback)
        local DropdownFrame = Instance.new("Frame")
        local DropdownLabel = Instance.new("TextLabel")
        local DropdownButton = Instance.new("TextButton")
        local DropdownStroke = Instance.new("UIStroke")
        
        DropdownFrame.Parent = parent
        DropdownFrame.BackgroundTransparency = 1
        DropdownFrame.Size = UDim2.new(0.95, 0, 0, 65)
        
        DropdownLabel.Parent = DropdownFrame
        DropdownLabel.BackgroundTransparency = 1
        DropdownLabel.Size = UDim2.new(1, 0, 0, 20)
        DropdownLabel.Font = Enum.Font.Gotham
        DropdownLabel.Text = text
        DropdownLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        DropdownLabel.TextSize = 14
        DropdownLabel.TextXAlignment = Enum.TextXAlignment.Left
        
        DropdownButton.Parent = DropdownFrame
        DropdownButton.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
        DropdownButton.Position = UDim2.new(0, 0, 0.5, 0)
        DropdownButton.Size = UDim2.new(1, 0, 0, 35)
        DropdownButton.Font = Enum.Font.Gotham
        DropdownButton.Text = default or "Select..."
        DropdownButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        DropdownButton.TextSize = 14
        
        -- Обводка выпадающего списка
        DropdownStroke.Parent = DropdownButton
        DropdownStroke.Color = Color3.fromRGB(255, 50, 50)
        DropdownStroke.Thickness = 1
        DropdownStroke.Transparency = 0.7
        
        local ButtonCorner = Instance.new("UICorner")
        ButtonCorner.CornerRadius = UDim.new(0, 8)
        ButtonCorner.Parent = DropdownButton
        
        -- Анимация кнопки
        DropdownButton.MouseEnter:Connect(function()
            game:GetService("TweenService"):Create(DropdownButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(60, 60, 70)}):Play()
            game:GetService("TweenService"):Create(DropdownStroke, TweenInfo.new(0.2), {Transparency = 0.3}):Play()
        end)
        
        DropdownButton.MouseLeave:Connect(function()
            game:GetService("TweenService"):Create(DropdownButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(50, 50, 60)}):Play()
            game:GetService("TweenService"):Create(DropdownStroke, TweenInfo.new(0.2), {Transparency = 0.7}):Play()
        end)
        
        DropdownButton.MouseButton1Click:Connect(function()
            for i, option in pairs(options) do
                if option == DropdownButton.Text then
                    local nextOption = options[(i % #options) + 1]
                    DropdownButton.Text = nextOption
                    if callback then
                        callback(nextOption)
                    end
                    break
                end
            end
        end)
        
        return DropdownFrame
    end

    -- Функция создания вкладки
    function GUI:CreateTab(name)
        local Tab = {}
        
        local TabButton = Instance.new("TextButton")
        local TabContent = Instance.new("ScrollingFrame")
        local UIListLayout = Instance.new("UIListLayout")
        local TabStroke = Instance.new("UIStroke")
        
        -- Кнопка вкладки
        TabButton.Name = name .. "Tab"
        TabButton.Parent = TabButtons
        TabButton.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
        TabButton.BorderSizePixel = 0
        TabButton.Size = UDim2.new(0.9, 0, 0, 40)
        TabButton.Font = Enum.Font.GothamSemibold
        TabButton.Text = name
        TabButton.TextColor3 = Color3.fromRGB(200, 200, 200)
        TabButton.TextSize = 14
        TabButton.AutoButtonColor = false
        
        -- Обводка кнопки вкладки
        TabStroke.Parent = TabButton
        TabStroke.Color = Color3.fromRGB(255, 50, 50)
        TabStroke.Thickness = 1
        TabStroke.Transparency = 0.8
        
        local TabCorner = Instance.new("UICorner")
        TabCorner.CornerRadius = UDim.new(0, 8)
        TabCorner.Parent = TabButton
        
        -- Анимация кнопки вкладки
        TabButton.MouseEnter:Connect(function()
            if TabButton.BackgroundColor3 ~= Color3.fromRGB(255, 50, 50) then
                game:GetService("TweenService"):Create(TabButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(50, 50, 60)}):Play()
                game:GetService("TweenService"):Create(TabStroke, TweenInfo.new(0.2), {Transparency = 0.5}):Play()
            end
        end)
        
        TabButton.MouseLeave:Connect(function()
            if TabButton.BackgroundColor3 ~= Color3.fromRGB(255, 50, 50) then
                game:GetService("TweenService"):Create(TabButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(35, 35, 45)}):Play()
                game:GetService("TweenService"):Create(TabStroke, TweenInfo.new(0.2), {Transparency = 0.8}):Play()
            end
        end)
        
        -- Контент вкладки
        TabContent.Name = name .. "Content"
        TabContent.Parent = ContentContainer
        TabContent.Active = true
        TabContent.BackgroundTransparency = 1
        TabContent.BorderSizePixel = 0
        TabContent.Size = UDim2.new(1, 0, 1, 0)
        TabContent.CanvasSize = UDim2.new(0, 0, 0, 0)
        TabContent.ScrollBarThickness = 4
        TabContent.ScrollBarImageColor3 = Color3.fromRGB(255, 50, 50)
        TabContent.Visible = false
        
        UIListLayout.Parent = TabContent
        UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
        UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
        UIListLayout.Padding = UDim.new(0, 10)
        
        -- Функции таба
        function Tab:Show()
            -- Скрываем все табы
            for _, otherTab in pairs(Tabs) do
                if otherTab.Content then
                    otherTab.Content.Visible = false
                end
                if otherTab.Button then
                    game:GetService("TweenService"):Create(otherTab.Button, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(35, 35, 45)}):Play()
                    game:GetService("TweenService"):Create(otherTab.Button.Stroke, TweenInfo.new(0.3), {Transparency = 0.8}):Play()
                end
            end
            
            -- Показываем этот таб
            if TabContent then
                TabContent.Visible = true
            end
            if TabButton then
                game:GetService("TweenService"):Create(TabButton, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(255, 50, 50)}):Play()
                game:GetService("TweenService"):Create(TabStroke, TweenInfo.new(0.3), {Transparency = 0.2}):Play()
            end
            
            CurrentTab = Tab
        end
        
        function Tab:AddButton(text, callback)
            return GUI:CreateButton(TabContent, text, callback)
        end
        
        function Tab:AddToggle(text, default, callback)
            return GUI:CreateToggle(TabContent, text, default, callback)
        end
        
        function Tab:AddSlider(text, min, max, default, callback)
            return GUI:CreateSlider(TabContent, text, min, max, default, callback)
        end
        
        function Tab:AddDropdown(text, options, default, callback)
            return GUI:CreateDropdown(TabContent, text, options, default, callback)
        end
        
        -- Обработчик клика
        TabButton.MouseButton1Click:Connect(function()
            Tab:Show()
        end)
        
        -- Сохраняем ссылки
        Tab.Button = TabButton
        Tab.Content = TabContent
        Tab.Name = name
        
        -- Добавляем в общий список
        Tabs[name] = Tab
        
        -- Если это первый таб, показываем его
        if not CurrentTab then
            Tab:Show()
        end
        
        return Tab
    end

    -- Функции GUI
    function GUI:ShowTab(tabName)
        if Tabs[tabName] then
            Tabs[tabName]:Show()
        end
    end

    function GUI:GetTab(tabName)
        return Tabs[tabName]
    end

    function GUI:Destroy()
        if ScreenGui then
            ScreenGui:Destroy()
        end
        getgenv().FurstyHubLoaded = false
    end

    function GUI:SetWatermarkEnabled(enabled)
        WatermarkEnabled = enabled
        if enabled then
            UpdateWatermark()
        else
            if game:GetService("CoreGui"):FindFirstChild(config.Name .. "Watermark") then
                game:GetService("CoreGui")[config.Name .. "Watermark"]:Destroy()
            end
        end
    end

    -- Создаем watermark при запуске
    spawn(function()
        wait(1)
        UpdateWatermark()
    end)

    return GUI
end

return FurstyHub
