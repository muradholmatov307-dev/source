-- Загрузка библиотеки
local FurstyHub = loadstring(game:HttpGet("https://raw.githubusercontent.com/your-repo/FurstyHub/main/source.lua"))()

-- Конфигурация GUI
local MyGUI = FurstyHub:CreateGUI({
    Name = "MyAwesomeHub",      -- Название вашего хаба
    Version = "v2.1",           -- Версия
    Discord = "dsc.gg/myserver", -- Ваш дискорд
    WatermarkEnabled = true     -- Включить watermark?
})

-- Создаем вкладки (теперь с улучшенной системой)
local CombatTab = MyGUI:CreateTab("Combat")
local VisualsTab = MyGUI:CreateTab("Visuals") 
local MovementTab = MyGUI:CreateTab("Movement")
local SettingsTab = MyGUI:CreateTab("Settings")

-- Добавляем элементы на вкладку Combat (новый синтаксис)
CombatTab:AddButton("Kill All", function()
    print("Kill All активирован!")
    -- Ваш код здесь
end)

CombatTab:AddToggle("Aimbot", false, function(state)
    print("Aimbot:", state)
    -- Ваш код здесь
end)

CombatTab:AddSlider("Aimbot FOV", 1, 360, 90, function(value)
    print("FOV установлен:", value)
    -- Ваш код здесь
end)

-- Добавляем элементы на вкладку Visuals
VisualsTab:AddToggle("ESP", true, function(state)
    print("ESP:", state)
    -- Ваш код здесь
end)

VisualsTab:AddDropdown("ESP Type", {"Box", "Tracer", "Skeleton"}, "Box", function(option)
    print("Выбран ESP тип:", option)
    -- Ваш код здесь
end)

-- Добавляем элементы на вкладку Movement
MovementTab:AddButton("Fly Hack", function()
    print("Fly активирован!")
    -- Ваш код здесь
end)

MovementTab:AddSlider("Speed", 1, 200, 50, function(value)
    print("Speed установлен:", value)
    -- Ваш код здесь
end)

-- Добавляем элементы на вкладку Settings
SettingsTab:AddButton("Destroy GUI", function()
    MyGUI:Destroy()
end)

SettingsTab:AddToggle("Watermark", true, function(state)
    MyGUI:SetWatermarkEnabled(state)
end)

SettingsTab:AddButton("Copy Discord", function()
    setclipboard("dsc.gg/myserver")
    print("Discord скопирован!")
end)

-- Можно переключать вкладки программно
wait(5)
MyGUI:ShowTab("Visuals") -- Переключиться на вкладку Visuals через 5 секунд

-- Получить доступ к конкретной вкладке
local combat = MyGUI:GetTab("Combat")
if combat then
    print("Combat tab доступен!")
end
